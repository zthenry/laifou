<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <!-- 标准控制台输出 -->
  <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out" />
    <!-- 关闭向catalina.out中输出日志, 避免该日志文件无限增长, 调试时可以将此选项调整为DEBUG -->
    <param name="Threshold" value="info" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %r %-5p [%F:%L] : %m%n" />
    </layout>
  </appender>

  <!-- 服务器主日志文件 -->
  <appender name="server.rolling.file" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="Threshold" value="info" />
    <!-- The active file to log to -->
    <param name="file" value="${catalina.home}/logs/web-lai.log" />
    <param name="Append" value="false" /><!-- 设置是否在重新启动服务时，在原有日志的基础添加新日志 -->
    <param name="append" value="true" />
    <param name="encoding" value="UTF-8" />
    <layout class="org.apache.log4j.PatternLayout">
      <!-- The log message pattern -->
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %r %-5p [%F:%L] : %m%n" />
    </layout>
  </appender>

  <!-- 方法执行时间监控日志定义 -->
  <appender name="performence.monitor.file" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="file" value="${catalina.home}/logs/performece" />
    <param name="Append" value="true" />
    <param name="encoding" value="UTF-8" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %r %-5p [%F:%L] : %m%n" />
    </layout>
    
  </appender>
  <!-- 公共组件日志 -->
  <logger name="org.springframework" additivity="false">
    <level value="warn" />
    <appender-ref ref="stdout" />
    <appender-ref ref="server.rolling.file" />
  </logger>
  <logger name="com.google.code.ssm" additivity="false">
    <level value="warn" />
    <appender-ref ref="stdout" />
    <appender-ref ref="server.rolling.file" />
  </logger>
  
  <logger name="com.mchange.v2" additivity="false">
    <level value="warn" />
    <appender-ref ref="stdout" />
    <appender-ref ref="server.rolling.file" />
  </logger>
  
  <logger name="org.apache" additivity="false">
    <level value="warn" />
    <appender-ref ref="stdout" />
    <appender-ref ref="server.rolling.file" />
  </logger>
  <logger name="catalia" additivity="false">
    <level value="warn" />
    <appender-ref ref="stdout" />
    <appender-ref ref="server.rolling.file" />
  </logger>
  
  <!-- 方法执行时间监控日志定义 -->
  <logger name="monitor">
  	<level value="debug" />
  	<appender-ref ref="stdout" />
    <appender-ref ref="performence.monitor.file" />
  </logger>
  <root>
    <priority value="info" />
    <appender-ref ref="stdout" />
    <appender-ref ref="server.rolling.file" />
  </root>

</log4j:configuration>